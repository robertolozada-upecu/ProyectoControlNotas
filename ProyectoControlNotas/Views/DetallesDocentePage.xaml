<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoControlNotas.Views.DetallesDocentePage"
             Title="DetallesDocentePage">
    
    
    <VerticalStackLayout>
        <Label 
            Text="{Binding Docente.EstudianteId, StringFormat='DocenteId: {0}'}" />
        <Label
            Text="{Binding Docente.NombresCompletos, StringFormat='Nombres: {0}'}" />
        <Label
            Text="{Binding Docente.Correo, StringFormat='Correo: {0}'}" />
        <Label
            Text="{Binding Docente.Usuario, StringFormat='Usuario: {0}'}" />
    </VerticalStackLayout>
</ContentPage>